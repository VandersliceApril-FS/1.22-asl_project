{% extends "layouts/_default.twig" %}
{% block main_content %}
    <h1>All Quizzes</h1>
    <ul>
        {% for q in quizzes %}
            <li>
                <a href="/quizzes/{{ q.id }}">{{ q.name }}</a> - 
                <a href="/quizzes/{{ q.id }}/edit">Edit</a> | <a href="/quizzes/{{ q.id }}/delete">Delete</a>
            </li>
        {% endfor %}
    </ul>
    
    <a href="/quizzes/new">Create New Quiz</a>
    
{% endblock %}

